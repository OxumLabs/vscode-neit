{
  "name": "neit",
  "displayName": "neit",
  "description": "Support for the neit programming language",
  "version": "0.0.0",
  "publisher": "neit",
  "repository": {
    "type": "git",
    "url": "https://github.com/neit-lang/vscode-neit"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "neit",
        "aliases": [
          "neit",
          "neit"
        ],
        "extensions": [
          ".neit"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/neit-logo.png",
          "dark": "./images/neit-logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "neit",
        "scopeName": "source.neit",
        "path": "./syntaxes/neit.tmLanguage.json"
      },
      {
        "scopeName": "markdown.neit.codeblock",
        "path": "./syntaxes/neit.codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.neit": "neit"
        }
      }
    ],
    "snippets": [
      {
        "language": "neit",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "neit.restartServer",
        "title": "Restart neit Server",
        "category": "neit"
      }
    ],
    "configurationDefaults": {
      "[neit]": {
        "editor.formatOnSave": true
      }
    },
    "configuration": {
      "title": "neit",
      "properties": {
        "neit.path": {
          "type": "string",
          "default": null,
          "description": "A path to the neit executable. By default, the extension looks for neit in the PATH, but if set, will use the path specified instead.",
          "scope": "machine"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:nsc",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "compile-watch": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "vscode:package": "vsce package",
    "format-check": "prettier ./**/*.ts --check",
    "format": "prettier ./**/*.ts --write --cache"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vscode/vsce": "^2.29.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^10.1.0",
    "prettier": "^3.0.1",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
